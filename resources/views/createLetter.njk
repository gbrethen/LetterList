{% extends 'master' %}

{% block content %}
    {% if old('errors') %}
        <div class="alert alert-danger">
            {% for error in old('errors') %}
                <li> {{ error.message }} </li>
            {% endfor %}
        </div>
    {% endif %}
    {{ form.open({action: 'LetterController.store'}) }}

        {{ csrfField }}

        <fieldset class="form-group">
            {{ form.label('Letter Name') }}
            {{ form.text('letterName', null, { class: 'form-control' })}}
        </fieldset>

        <fieldset class="form-group">
            {{ form.label('Description') }}
            {{ form.text('letterComments', null, { class: 'form-control' })}}
        </fieldset>

        {{ form.submit('Add', 'publish', { class: 'btn btn-primary btn-block' })}}

    {{ form.close() }}
{% endblock %}